<%= turbo_frame_tag @question_group do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Questions" %>

    <h1 class="mb-5 font-bold text-3xl">Questions</h1>

    <div id="<%= dom_id(@question_group, :questions) %>" class="space-y-5">
      <% @questions.each do |question| %>
        <%= render question %>
      <% end %>
    </div>
  </div>
<% end %>
