<%= turbo_frame_tag @question_group do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Questions" %>

    <div class="flex justify-between items-center mb-10 ">
      <h1 class="font-bold text-4xl">Questions</h1>
      <%= link_to "New question", new_question_group_question_path(@question_group), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>

    <div id="questions" class="space-y-5">
      <% @questions.each do |question| %>
        <%= render question %>
      <% end %>
    </div>
  </div>
<% end %>
